{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run k6 Load Test",
      "type": "shell",
      "command": ".\\k6.exe",
      "args": [
        "run",
        "--out",
        "'dashboard=period=1s&report=.\\reports\\loadTestCustomReport.html'",
        "main.js"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    }
  ]
}

